							<includes>
								<include>**/record/kmeans/KMeans.class</include>
								<include>**/record/kmeans/KMeans$*.class</include>
								<include>**/record/kmeans/KMeansSampleDataGenerator.class</include>
							</includes>
						</configuration>
					</execution>
					
