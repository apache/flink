								<include>**/record/kmeans/KMeansSampleDataGenerator.class</include>
								<include>**/record/kmeans/KMeansIterative$*.class</include>
								<include>**/record/kmeans/udfs/*.class</include>
							</includes>
						</configuration>
					</execution>

					<!-- Pairwise Shortest Paths -->
					<execution>
						<id>PairwiseSP</id>
