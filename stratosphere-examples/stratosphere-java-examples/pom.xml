							<archive>
								<manifestEntries>
									<program-class>eu.stratosphere.example.java.record.pagerank.DanglingPageRank</program-class>
								</manifestEntries>
							</archive>

							<includes>
								<include>**/record/pagerank/*.class</include>
								<include>**/record/util/ConfigUtils.class</include>
							</includes>
						</configuration>
					</execution>
					
					<!-- KMeans -->
					<execution>
						<id>KMeans</id>
						<phase>package</phase>
						<goals>
